<section class="service-detail-container" *ngIf="(subService)">

	<!-- SERVICE MEDIA -->
	<section class="row">
		<div class="column">
			<img [src]="subService.ImageUri">
		</div>
	</section>

	<!--TYPE-->
	<section class="row">
		<div class="column">
			<span class="service-detail-container__type">service</span>
		</div>
	</section>

	<!--SERVICE TITLE-->
	<section class="row">
		<div class="column">
			<h2 class="service-detail-container__title">{{subService.Title}}</h2>
		</div>
	</section>

	<!--SERVICE DESCRIPTION-->
	<section class="row">
		<div class="column">
			<p class="service-detail-container__intro" [innerHTML]="subService.Description"></p>
		</div>
	</section>

	<!--SERVICE BODY-->
	<section class="row">
		<div class="column">
			<span [innerHTML]="subService.Body"></span>
		</div>
	</section>
</section>
